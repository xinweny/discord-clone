    "@types/jsonwebtoken": "^9.0.5",
    "@types/ms": "^0.7.34",
    "@types/node": "^18.19.15",
    "@types/nodemailer": "^6.4.14",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
